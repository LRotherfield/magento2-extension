<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Ometria\Core\Logger\Handler\Ometria">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <virtualType name="ometriaLogger" type="Ometria\Core\Logger\Ometria">
        <arguments>
            <argument name="name" xsi:type="string">Ometria Custom Log</argument>
            <argument name="handlers" xsi:type="array">
                <item name="ometria" xsi:type="object">Ometria\Core\Logger\Handler\Ometria</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Ometria\Core\Helper\Ping">
        <arguments>
            <argument name="logger" xsi:type="object">ometriaLogger</argument>
        </arguments>
    </type>
</config>
